<?xml version="1.0" encoding="utf-8"?>
<robot name="baybot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find baybot_description)/urdf/xtion.urdf.xacro"/>
  <xacro:include filename="$(find baybot_description)/urdf/baybot.gazebo.xacro"/>

  <xacro:asus_camera name="xtion" parent="base_link">
    <origin xyz="0.155 0 0.4" rpy="0 0 0" />
  </xacro:asus_camera>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.304 0.251 0.29"/>
      </geometry>
      <origin xyz="0 0 .23" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.304 0.251 0.29"/>
      </geometry>
      <origin xyz="0 0 0.23" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.03" />
    </inertial>
  </link>

  <joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <origin xyz="-0.112 0 0.078" rpy="0 0 0"/>
  </joint>
  <link name="caster_back_link">
    <collision>
      <geometry>
        <sphere radius="0.078"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    <visual>
      <geometry>
        <sphere radius="0.078"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001023539" ixy="0.0" ixz="0.0" iyy="0.001023539" iyz="0.0" izz="0.001023539" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.067 0.1378 0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="wheel_left_link">
    <collision>
      <geometry>
        <cylinder length="0.027" radius="0.05"/>
      </geometry>
      <origin rpy="0.0 0.0 0" xyz="0 0 0.1"/>
    </collision>
    <visual name="visual">
      <geometry>
        <cylinder length="0.027" radius="0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="0.4" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.067 -0.1378 0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="wheel_right_link">
    <collision>
      <geometry>
        <cylinder length="0.027" radius="0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.195"/>
    </collision>
    <visual name="visual">
      <geometry>
        <cylinder length="0.027" radius="0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="0.4" />
      <origin xyz="0 0 0.3" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

</robot>

