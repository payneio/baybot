<launch>
    <arg name="i2c_path" default="/dev/i2c-2"/>
    <arg name="i2c_channel"/>

    <node name="baybot_base" pkg="baybot_base" type="baybot_base_node" output="screen" >
        <rosparam subst_value="true">
            i2c/path: $(arg i2c_path)
            i2c/channel: $(arg i2c_channel)
            control_hz: 20.0
        </rosparam>
    </node>

    <!-- Differential controller parameters -->
    <include file="$(find baybot_control)/launch/control.launch" />

    <node name="rplidarNode" pkg="rplidar_ros"  type="rplidarNode" output="screen">
        <param name="serial_port"         type="string" value="/dev/lidar"/>
        <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
        <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
        <param name="frame_id"            type="string" value="laser"/>
        <param name="inverted"            type="bool"   value="false"/>
        <param name="angle_compensate"    type="bool"   value="true"/>
    </node>

    <!-- <node name="imu" pkg="baybot_base" type="baybot_base_imu_node" output="screen" >
        <rosparam subst_value="true">
            i2c/path: $(arg i2c_path)
            i2c/imu_channel: $(arg i2c_imu_channel)
            i2c/mag_channel: $(arg i2c_mag_channel)
            imu_hz: 20.0
        </rosparam>
    </node> -->

    <!-- IMU -->
    <include file="$(find baybot_base)/launch/imu.launch" />

</launch>
