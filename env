#!/bin/bash

# source this file with the master ip as arg1

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
cd $DIR/..
BAYDIR=$(pwd)

source $BAYDIR/devel/setup.bash
ip=`hostname -I | cut -d' ' -f1`
export ROS_IP=$ip
export ROS_MASTER_URI=http://$1:11311/
export PATH=$PATH:$DIR/bin

